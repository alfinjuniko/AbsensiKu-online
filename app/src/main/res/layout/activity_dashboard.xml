<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <!-- ScrollView agar konten bisa digulir jika terlalu panjang -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/primary_green"
                android:gravity="center"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dashboard"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:layout_marginTop="-40dp"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/ic_dashboard"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <!-- Card Info -->
            <androidx.cardview.widget.CardView
                style="@style/AppCard.Elevated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-80dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/background_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Row: Foto dan Nama -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/tvUserInitial"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:text="U"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:background="@drawable/circle_background"
                            android:layout_marginEnd="20dp" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvNama"
                                style="@style/AppText.Subtitle"
                                android:text="Loading..."
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:textSize="18sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/tvNis"
                                style="@style/AppText.Caption"
                                android:text="Loading..."
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Row Data -->
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableRow>
                            <TextView
                                android:text="Kelas:"
                                android:textColor="#A0A0A0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tvKelas"
                                android:text="Loading..."
                                android:textColor="#1D3557"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="80dp"
                                android:layout_weight="1" />
                        </TableRow>

                        <TableRow>
                            <TextView
                                android:text="Status:"
                                android:textColor="#A0A0A0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tvStatus"
                                android:text="Loading..."
                                android:textColor="#1D3557"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="80dp"
                                android:layout_weight="1" />
                        </TableRow>

                        <TableRow>
                            <TextView
                                android:text="Jenis Kelamin:"
                                android:textColor="#A0A0A0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tvJenisKelamin"
                                android:text="Loading..."
                                android:textColor="#1D3557"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="80dp"
                                android:layout_weight="1" />
                        </TableRow>

                    </TableLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        style="@style/AppBottomNav"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/primary_green"
        app:menu="@menu/bottom_nav_menu"
        android:layout_alignParentBottom="true"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:itemBackground="@android:color/transparent"
        app:itemRippleColor="@android:color/transparent" />

</RelativeLayout>
